<html xmlns="http://www.w3.org/1999/xhtml"
     xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
     xmlns:p="http://primefaces.org/ui"
     xmlns:c="http://java.sun.com/jsp/jstl/core">
 <h:head><title>Occupation</title></h:head>
 <h:body>
<h:form id="form">

    
	<p:tabView id="tabView">  


<c:forEach var="sites" items="${chartBaean.sites()}">
	<p:tab id="tab1" title="Site -  ${sites.name}"> 
	
		<h:form id="form01">	

		    <h:panelGrid columns="4" >
			<c:forEach var="ivr" items="${charBean.ivrs(sites.siteId)}">

				<p:poll interval="3" update="#{ivr.voteId}" />
	
			    <p:pieChart id="#{ivr.voteId}" value="#{chartBean.livePieModel(ivr.ivrId)}" title="#{ivr.ivrCode}"
			                legendPosition="nw" style="width:300px;height:200px"/>
		
			</c:forEach>
			</h:panelGrid>
		</h:form>
		
	</p:tab>
	
</c:forEach>
</h:form>
</h:body>
</html> 